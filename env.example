# Environment Variables Template
# Copy this file to .env.local for development or .env.production for production

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/wojny_laserowe_dev"
POSTGRES_DB="wojny_laserowe_dev"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"

# Redis (for rate limiting in production)
# Required in production. In development, falls back to in-memory Map.
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
# Note: Install ioredis package for production: npm install ioredis

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here-change-in-production" # REQUIRED in production (>=32 chars)
NEXTAUTH_URL="http://localhost:3000"

# SMTP (for email notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Upload
UPLOAD_MAX_SIZE="10485760" # 10MB
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp"

# Security
JWT_SECRET="your-jwt-secret-here"
ENCRYPTION_KEY="your-encryption-key-here"
CSRF_SECRET="dev-csrf-secret-change-in-production" # REQUIRED if contact form enabled

# Monitoring
PROMETHEUS_PORT="9090"
GRAFANA_PORT="3001"

# Feature Flags
FEATURE_NEW_GALLERY="true"
FEATURE_DARK_MODE="false"
FEATURE_NOTIFICATIONS="true"
FEATURE_OFFLINE_MODE="false"

# API Keys (if needed)
GOOGLE_ANALYTICS_ID=""
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""

# Social Media Links (NEXT_PUBLIC_ prefix for client-side access)
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com"
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com"
NEXT_PUBLIC_PHONE_NUMBER="+48 123 456 789"
NEXT_PUBLIC_INSTAGRAM_POST_URL="https://www.instagram.com/p/POST_ID/"

# Address and Google Maps
NEXT_PUBLIC_ADDRESS="Aleja Zygmunta Krasińskiego 1, 31-111 Kraków / JUBILAT III piętro"
NEXT_PUBLIC_MAPS_LINK="https://www.google.com/maps/dir/?api=1&destination=Aleja%20Zygmunta%20Krasi%C5%84skiego%201%2C%2031-111%20Krak%C3%B3w&travelmode=driving"
NEXT_PUBLIC_MAPS_EMBED_URL="https://www.google.com/maps?q=Aleja%20Zygmunta%20Krasi%C5%84skiego%201%2C%2031-111%20Krak%C3%B3w&output=embed"
