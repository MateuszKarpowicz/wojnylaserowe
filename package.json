{
  "name": "wojny-laserowe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "docker:build": "./scripts/build.sh",
    "docker:dev": "./scripts/dev.sh",
    "docker:deploy": "./scripts/deploy.sh",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "security:audit": "./scripts/security-audit.sh",
    "security:check": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "k8s:deploy": "./scripts/k8s-deploy.sh",
    "k8s:deploy:dev": "./scripts/k8s-deploy.sh development",
    "k8s:deploy:staging": "./scripts/k8s-deploy.sh staging",
    "k8s:deploy:prod": "./scripts/k8s-deploy.sh production",
    "monitoring:deploy": "./scripts/monitoring-deploy.sh",
    "monitoring:prometheus": "kubectl port-forward svc/prometheus 9090:9090 -n monitoring",
    "monitoring:grafana": "kubectl port-forward svc/grafana 3000:3000 -n monitoring",
    "monitoring:kibana": "kubectl port-forward svc/kibana 5601:5601 -n monitoring",
    "backup:deploy": "kubectl apply -f backup/",
    "backup:postgres": "kubectl create job postgres-backup-$(date +%Y%m%d) --from=cronjob/postgres-backup -n production",
    "backup:redis": "kubectl create job redis-backup-$(date +%Y%m%d) --from=cronjob/redis-backup -n production",
    "backup:verify": "kubectl create job backup-verify-$(date +%Y%m%d) --from=cronjob/backup-verification -n production",
    "security:deploy": "kubectl apply -f security/",
    "security:rbac": "kubectl apply -f security/rbac-network-policies.yaml",
    "security:secrets": "kubectl apply -f security/secrets-rotation.yaml",
    "security:psp": "kubectl apply -f security/pod-security-policies.yaml",
    "performance:deploy": "kubectl apply -f performance/",
    "performance:nginx": "kubectl apply -f performance/nginx-cache-config.yaml",
    "performance:redis": "kubectl apply -f performance/redis-cache-config.yaml",
    "performance:postgres": "kubectl apply -f performance/postgres-performance-config.yaml",
    "production:deploy": "npm run backup:deploy && npm run security:deploy && npm run performance:deploy",
    "production:status": "kubectl get pods,svc,ingress -n production",
    "production:logs": "kubectl logs -f deployment/wojny-laserowe -n production",
    "production:restart": "kubectl rollout restart deployment/wojny-laserowe -n production",
    "production:scale": "kubectl scale deployment wojny-laserowe --replicas=3 -n production"
  },
  "dependencies": {
    "next": "^16.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.0.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0"
  }
}
